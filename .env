# ------------------------------
# CoreX-Docs Environment Config
# ------------------------------

# App Environment (production, development)
CI_ENVIRONMENT = production

# ------------------------------
# Base URL Configuration
# ------------------------------
app.baseURL = 'http://localhost/'

# ------------------------------
# Database Configuration
# ------------------------------
database.default.hostname = 'CHANGE_ME'
database.default.database = 'CHANGE_ME'
database.default.username = 'CHANGE_ME'
database.default.password = 'CHANGE_ME'
database.default.DBDriver = 'MySQLi'
database.default.DBPrefix = ''
database.default.charset = 'utf8mb4'
database.default.DBCollat = 'utf8mb4_general_ci'
database.default.port = 3306

DB_HOST = 'localhost'
DB_USER = 'CHANGE_ME'
DB_NAME = 'CHANGE_ME'
DB_PASS = ''

DB_HOST_TEST = 'localhost'
DB_USER_TEST = 'CHANGE_ME'
DB_NAME_TEST = 'CHANGE_ME'
DB_PASS_TEST = ''

# ------------------------------
# GitHub API Configuration
# ------------------------------
GITHUB_API_KEY = 'CHANGE_ME'

# ------------------------------
# Logging & Debugging
# ------------------------------
app.debug = false
app.logThreshold = 4
app.logPath = 'writable/logs/'

# ------------------------------
# Security & Encryption
# ------------------------------
app.encryptionKey = 'CHANGE_ME'

# ------------------------------
# Email Configuration (Optional)
# ------------------------------
email.protocol = 'smtp'
email.SMTPHost = 'CHANGE_ME'
email.SMTPUser = 'CHANGE_ME'
email.SMTPPass = 'CHANGE_ME'
email.SMTPPort = 465
email.mailType = 'html'
email.charset = 'utf-8'
email.wordWrap = true

# Admin Credentials (For Secure Login)
ADMIN_USERNAME = "CHANGE_ME"
ADMIN_PASSWORD_HASH = "CHANGE_ME"  # Use a bcrypt hashed password

